page {
    height: 100%;
    background: #203668;
}

.icon {
  width: 1em;
  height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;
}

.crop{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 999;
}
.crop-top{
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  top: 10rpx;
  left: 0;
  right: 0;
  bottom: 150rpx;
  z-index: 1;
}
.crop-bottom{
  position: absolute;
  bottom: 100rpx;
  height: 100rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14rpx;
  color: #ccc;
  z-index: 999;
}
.crop-bottomview-button {
  margin-top: 40rpx; 
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.crop-bottomview {
  position: absolute;
  bottom: 100rpx;
  height: 100rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #ccc;
}
.crop-bottomview-button-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.crop-bottomview-button-item-image {
  width: 60rpx;
  height: 60rpx;
}

.crop-bottomview-button-item-text {
  font-size: 26rpx;
  margin-top: 10rpx;
  color: white;
}
.canvas{
  position: absolute;
  width: 200px;
  height: 200px;
  background: white;
  
}
.bg {
    width: 100%;
    height: 100%;
}

.content {
    position: absolute;
    z-index: 2;
    top: 320rpx;
    width: 100%;
}

/* panel start */
.panel {
    width: 92%;
    margin: auto;
    background: rgba(255, 255, 255, 0.644);
    border-radius: 30rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    overflow: hidden;
    padding: 30rpx;
}

.panel .category-list {
    display: flex;
    margin-bottom: 24rpx;
}

.panel .category-list text {
    color: #4d4d4d;
    font-size: 30rpx;
    margin: 0 8rpx;
    transition: .1s ease;
}

.panel .category-list text.active {
    color: #18325f;
    font-weight: bolder;
}

.panel scroll-view {
    white-space: nowrap;
}

.panel scroll-view image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 16rpx;
    box-shadow: 0 12rpx 16rpx -12rpx rgba(0, 0, 0, .1);
    border: 4rpx solid rgba(3, 3, 170, .05);
    margin-right: 10rpx;
}

.panel scroll-view image.active {
    border: 4rpx solid #18325f;
}
.panel scroll-view text {
  margin-right: 10rpx;
  color: #4d4d4d;
  font-size: 25rpx;
  margin-top: 5rpx;
  transition: .1s ease;
}

.panel scroll-view text.active {
  color: #18325f;
  font-weight: bolder;
}


/* btns */
.btns {
    width: 86%;
    margin: auto;
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}

.btns .left {
    margin-top: 15rpx;
    width:320rpx;
    height: 320rpx;
    position: relative;
}

.btns .left .avatar {
    position: absolute;
    left: 0;
    top: 0;
}

.btns .left .image {
    width: 320rpx;
    height: 320rpx;
    background-color: #fff;
}

.btns .left image {
    width: 100%;
    height: 100%;
}

.btns .right button {
    display: flex;
    align-items: center;
    justify-content:center;
    width: 200rpx;
    height:65rpx;
    background: #fff;
    color: black;
    font-weight: bolder;
    font-size: 25rpx;
    margin-bottom: 30rpx;
    padding: 8rpx 20rpx;
    box-shadow: 10rpx 10rpx 10rpx 0rpx rgb(0, 0, 0);
    border-radius: 24rpx;
}
