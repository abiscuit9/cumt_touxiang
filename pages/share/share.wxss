/* share.wxss */

.share {
  background: #222325;
  height: 100%;
  width: 100%;
  position: absolute;
}

.drawPart {
  width: 100vw;
  min-height: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  top: 30rpx;
  position: absolute;
  width: 72vw;
  height: 111vw;
}

.shareText {
  position: absolute;
  bottom: 230rpx;
  font-size: 24rpx;
  color: gainsboro;
}

.footer {
  bottom: 0;
  width: 100vw;
  height: 220rpx;
  display: flex;
  position: absolute;
  flex-direction: row;
  align-items: center;
}

.shareBtnPic {
  position: absolute;
  bottom: 0;
  width: 100vw;
  height: 220rpx;
}

.shareBtn {
  width: 50%;
  height: 220rpx;
  line-height: 90rpx;
  background: none;
}


