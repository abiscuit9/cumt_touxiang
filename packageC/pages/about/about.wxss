page {
  height: 100%;
  background: white;
  --blue: #586b95;
  --grayLight: #f7f7f7;
  --gray: #7f7f7f;
  --grayActive: #e0e0e0;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.line{
    border-bottom: 1px solid var(--grayLight);

}
.pyqItem {
  display: flex;
  padding: 27rpx;
  box-sizing: border-box;
}

.pyq-right {
  flex: 1;
}

/* 头像样式 */
.avatarStyle {
  width: 85rpx;
  height: 85rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  margin-right: 20rpx;
}

/* 用户昵称样式 */
.userNickNameStyle {
  display: inline-block;
  color: var(--blue);
  font-weight: 600;
  font-size: 30rpx;
}

/* 朋友圈文本样式 */
.pyqContentText {
  margin-top: 10rpx;
  margin-bottom: 0rpx;
  line-height: 40rpx;
  font-size: 30rpx;
}

/* 底部栏样式 */
.bottomStyle {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

/* 点赞/评论按钮样式 */
.goodBtn {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--grayLight);
  width: 70rpx;
  height: 45rpx;
  border-radius: 10rpx;
}

.goodBtn:active {
  background-color: var(--grayActive);
}

.goodBtnDot {
  margin: 4rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: var(--blue);
}

.bottomStyle>view:last-child {
  margin-left: auto;
}

/* 解决因字体占位置问题 */
.center {
  font-size: 0;
}

/* 图片 */
.picture-out {
  margin-bottom: 35rpx;
}

.bottomDateStyle {
  margin-left: 5rpx;
  color: var(--gray);
  font-size: 26rpx;
}

/* 外层 */

.weui-uploader__bd {
  margin: 25rpx 0 70rpx 0;
  margin-bottom: -16rpx;
  margin-right: -16rpx;
  overflow: hidden;
}

/* 预览层 */

/* 预览图片外层 */

.weui-uploader__file {
  width: 30%;
  height: 0;
  padding-bottom: 30%;
  float: left;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  /* 自适应宽高相等 */
  position: relative;
}

/* 图片样式 */

.weui-uploader__img {
  display: block;
  /* visibility: hidden; */
  /* 图片填满宽高 */
  position: absolute;
  width: 100%;
  height: 100%;
}

/* pyq评论样式 */

.mypyqComment {
  position: relative;
  margin-top: 10rpx;
  padding: 20rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background-color: var(--grayLight);
}
/* 评论样式 */
.commentContentStyle {
  position: relative;
}
/* 评论ITEM */
.CommentItem {
  display: flex;
  margin-bottom: 5rpx;
}
/* 评论ITEM右侧 */
.CommentItemRight {
  flex: 1;
}
/* 评论信息栏 */
.commentTop {
  display: flex;
  align-items: center;
}
/* 评论区昵称 */
.commentNickName {
  display: inline-block;
  color: var(--blue);
  font-weight: 600;
  font-size: 28rpx;
}

/* 评论区内容 */
.commentContentText {
  color: black;
  font-size: 28rpx;
  font-weight: 400;
}
.commentContentText:active {
  background-color: var(--grayActive);
}
